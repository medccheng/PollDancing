@model PollDancingLibrary.DTOs.SenatorDTO
@{
    ViewData["Title"] = "Senator Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .card-header {
            background-color: #007bff;
            color: white;
        }

        .scrollable-panel {
            max-height: 400px;
            overflow-y: scroll;
        }
    </style>
</head>
<body>
    <div class="container mt-4">

        <div class="row mb-3">
            <div class="col text-center">
                <h3>@Model.Name</h3>
                <h4 class="mb-3">Member ID - @Model.Id</h4>
                <h4 class="mb-3">@Model.PartyName - @Model.State</h4>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <div class="row mb-3">
                <div class="col-md-6 offset-md-3">
                    <div class="card">
                        <h4 class="card-header">Depiction</h4>
                        <div class="card-body text-center">
                            <img src="@Model.Image" class="img-fluid" style="max-width: 50%;" alt="Image of @Model.Name">
                        </div>
                    </div>
                </div>
            </div>
        }


        <div class="row mb-3">
            @if (Model.AddressInformation != null)
            {
                <div class="col-md-6">
                    <div class="card">
                        <h4 class="card-header">Address Information</h4>
                        <div class="card-body scrollable-panel">
                            <p>@Model.AddressInformation.Office, @Model.AddressInformation.City, @Model.AddressInformation.District</p>
                            <p>Phone: @Model.AddressInformation.Phone</p>
                        </div>
                    </div>
                </div>
            }
            <div class="col-md-6">
                <div class="card">
                    <h4 class="card-header">Terms</h4>
                    <div class="card-body scrollable-panel">
                        @if (Model.Terms != null && Model.Terms.Any())
                        {
                            @foreach (var term in Model.Terms)
                            {
                                <p>From @term.StartYear to @(term.EndYear.HasValue ? term.EndYear.ToString() : "Present") - @term.MemberType in @term.StateName (@term.StateCode)</p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>


        <div class="row mb-3">
            <div class="col-md-6">
                <div class="card">
                    <h4 class="card-header">Sponsored Legislations</h4>
                    <div class="card-body scrollable-panel">
                        @if (Model.SponsoredLegislations != null && Model.SponsoredLegislations.Any())
                        {
                            @foreach (var legislation in Model.SponsoredLegislations)
                            {
                                <p>@legislation.Title</p>
                                <p>@legislation.Summaries</p>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <h4 class="card-header">Co-Sponsored Legislations</h4>
                    <div class="card-body scrollable-panel">
                        @if (Model.CosponsoredLegislations != null && Model.CosponsoredLegislations.Any())
                        {
                            @foreach (var legislation in Model.CosponsoredLegislations)
                            {
                                <p>@legislation.Title</p>
                                <p>@legislation.Summaries</p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-3">            
            <div class="col-md-6">
                <div class="card">
                    <h4 class="card-header">Bill Votes</h4>
                    <div class="card-body scrollable-panel">
                        @if (Model.MemberLegislationVotes != null && Model.MemberLegislationVotes.Any())
                        {
                            @foreach (var vote in Model.MemberLegislationVotes)
                            {
                                <p>@vote.LegislationName</p>
                                <p>@vote.Vote</p>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <h4 class="card-header">Scorecards</h4>
                    <div class="card-body scrollable-panel">
                        @if (Model.ScoreCards != null && Model.ScoreCards.Any())
                        {
                            @foreach (var scorecard in Model.ScoreCards)
                            {
                                <p>@scorecard.Subject</p>
                                <p>@scorecard.Score</p>
                                <p>@scorecard.Comment</p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
